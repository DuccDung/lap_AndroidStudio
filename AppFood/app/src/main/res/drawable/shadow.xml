<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer đổ bóng -->
    <item android:left="4dp" android:top="4dp"> <!-- Vị trí đổ bóng -->
        <shape>
            <solid android:color="#80000000" /> <!-- Màu đổ bóng (đen, 50% trong suốt) -->
            <corners android:radius="8dp" /> <!-- Bo góc cho bóng -->
        </shape>
    </item>

    <!-- Layer nội dung chính -->
    <item>
        <shape>
            <solid android:color="#333" /> <!-- Màu nền của nội dung -->
            <corners android:radius="8dp" /> <!-- Bo góc cho nội dung -->
        </shape>
    </item>
</layer-list>
